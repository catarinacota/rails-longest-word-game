<h1>New Game</h1>


<div class="row">
  <div class="letterbox">
    <% @letters.each do |letter| %>
      <div class="letter text-center">  <%= letter %>  </div>
    <% end %>
  </div>
</div>

<div>
  <p>What's the longest word you can find?</p>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join %>
    <!-- <input type="text" name="letters" value="<%= @letters.join %>"> -->
    <input type="text" name="word" id="input">
    <input type="submit" value="Play" id="submit">
  </form>
</div>
